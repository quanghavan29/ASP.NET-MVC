<body>
    <span style="margin-top: 10px; font-size: 20px;">Quản Lí Tài Khoản</span>
    <span style="margin-left: 850px;"><a href="Account/InsertAccount" type="button" class="btn btn-info" style="padding: 2px 7px 2px 7px;">Thêm Mới</a></span>
    <section style="margin-top: 20px">
        <div class="container">
            <table class="table" style="font-size: 14px;">
                <thead class="thead-light">
                    <tr>
                        <th scope="col" style="vertical-align: middle;">Email</th>
                        <th scope="col" style="vertical-align: middle;">Phone</th>
                        <th scope="col" style="vertical-align: middle;">Name</th>
                        <th scope="col" style="vertical-align: middle;">Address</th>
                        <th scope="col" style="vertical-align: middle;">Role</th>
                        <th scope="col" style="vertical-align: middle;">Verify</th>
                        <th scope="col" style="vertical-align: middle;">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in ViewBag.users)
                    {
                        <tr>
                            <td scope="col" style="vertical-align: middle;">@user.email</td>
                            <td scope="col" style="vertical-align: middle;">@user.phone</td>
                            <td scope="col" style="vertical-align: middle;">@user.name</td>
                            <td scope="col" style="vertical-align: middle;">@user.address</td>
                            <td scope="col" style="vertical-align: middle;">@user.role</td>
                            <td scope="col" style="vertical-align: middle;">@user.verify</td>
                            <td scope="col" style="vertical-align: middle;">
                                <a href="Account/UpdateAccount?user_id=@user.user_id" type="button" class="btn btn-warning" style="padding: 2px 7px 2px 7px;">Sửa</a>
                                <a href="../ManagerAccount/DeleteAccount?user_id=@user.user_id" type="button" class="btn btn-danger" style="padding: 2px 7px 2px 7px;">Xóa</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
