@using Luxstay.Models;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <title>Title of the document</title>
    <link rel="stylesheet" href="~/Assets/css/paging.css">
</head>

<body>
    <span style="margin-top: 10px; font-size: 20px;">Quản Lí Homestay</span>
    <span style="margin-left: 850px;"><a href="ManagerHome/InsertHome" type="button" class="btn btn-info" style="padding: 2px 7px 2px 7px;">Thêm Mới</a></span>
    <section style="margin-top: 20px">
        <div class="container">
            <table class="table" style="font-size: 12px;">
                <thead class="thead-light">
                    <tr>
                        <th scope="col" style="vertical-align: middle;">Ảnh</th>
                        <th scope="col" style="vertical-align: middle;">Tên</th>
                        <th scope="col" style="vertical-align: middle;">Địa điểm</th>
                        <th scope="col" style="vertical-align: middle;">Giá phòng</th>
                        <th scope="col" style="vertical-align: middle;">Số phòng ngủ</th>
                        <th scope="col" style="vertical-align: middle;">Mô tả ngắn</th>
                        <th scope="col" style="vertical-align: middle;">Mô tả chi tiết</th>
                        <th scope="col" style="vertical-align: middle;">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (ViewBag.homes != null)
                    {
                        foreach (var home in ViewBag.homes)
                        {
                            <tr>
                                <th style="vertical-align: middle;"><img src="~/Assets/images/product/@home.image_intro" style="height: 40px; width: 60px;" /></th>
                                <th style="vertical-align: middle;">@home.home_name</th>
                                <th style="vertical-align: middle;">@home.place.place_name</th>
                                <th style="vertical-align: middle;">
                                    @{
                                        int price = home.price;
                                        int million = price / 1000000;
                                        int hundred = price % 1000000 / 1000;

                                        if (million > 0)
                                        {
                                            if (hundred > 0)
                                            {
                                                <p class="price_and_address">@million,@hundred,000đ/đêm</p>
                                            }
                                            else
                                            {
                                                <p class="price_and_address">@million,000,000đ/đêm</p>
                                            }
                                        }
                                        else
                                        {
                                            <p class="price_and_address">@hundred,000đ/đêm</p>
                                        }
                                    }

                                </th>
                                <th style="vertical-align: middle;">@home.room_number phòng ngủ</th>
                                <th style="vertical-align: middle;">Phòng riêng · 1 Phòng tắm...</th>
                                <th style="vertical-align: middle;">·Vị trí rất đẹp và thuận tiện...</th>
                                <th style="vertical-align: middle;">
                                    <a href="" type="button" class="btn btn-warning" style="padding: 2px 7px 2px 7px;">Sửa</a>
                                    <a href="" type="button" class="btn btn-danger" style="padding: 2px 7px 2px 7px;">Xóa</a>
                                </th>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
        <!-- PAGGING -->
        <nav aria-label="Page navigation example">
            @{
                int currentPage = ViewBag.pageIndex;
            }
            <ul class="pagination justify-content-center">
                @if (currentPage > 1)
                {
                    int previous = currentPage - 1;
                    <li class="page-item">
                        <a class="page-link" href="../../Admin/ManagerHome?pageIndex=@previous" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                }
                @for (int i = 1; i <= ViewBag.totalPage; i++)
                {
                    <li class="page-item">
                        @{
                            string active = "";
                            if (currentPage == i)
                            {
                                active += "active";
                            }
                        }
                        <a class="page-link @active" href="../../Admin/ManagerHome?pageIndex=@i">@i</a>
                    </li>
                }
                @if (currentPage < ViewBag.totalPage)
                {
                    int next = currentPage + 1;
                    <li class="page-item">
                        <a class="page-link" href="../../Admin/ManagerHome?pageIndex=@next" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>

                }
            </ul>
        </nav>
    </section>



</body>
</html>

